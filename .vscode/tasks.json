{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update a VPN provider servers data",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "./cmd/gluetun/main.go",
                "update",
                "${input:updateMode}",
                "-providers",
                "${input:provider}"
            ],
        }
    ],
    "inputs": [
        {
            "id": "provider",
            "type": "promptString",
            "description": "Please enter a provider (or comma separated list of providers)",
        },
        {
            "id": "updateMode",
            "type": "pickString",
            "description": "Update mode to use",
            "options": [
                "-maintainer",
                "-enduser"
            ],
            "default": "-maintainer"
        },
    ]
}